<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hamster Kombat</title>
    <style>
        body {
            background-color: #f0f0f0;
            font-family: Arial, sans-serif;
            text-align: center;
            margin-top: 50px;
            color: #333;
        }

        #hamster {
            background-image: url('https://example.com/hamster.png'); /* Укажите URL картинки хомяка */
            background-size: cover;
            width: 150px;
            height: 150px;
            border-radius: 50%;
            cursor: pointer;
            margin: 20px auto;
            transition: transform 0.1s ease;
        }

        #hamster:active {
            transform: scale(0.9);  /* Эффект уменьшения при нажатии */
        }

        #tapCount {
            font-size: 24px;
            margin-top: 20px;
        }

        #powerLevel {
            font-size: 18px;
        }
    </style>
</head>
<body>
    <h1>Hamster Kombat</h1>
    <div id="hamster"></div>
    <div id="tapCount">Taps: 0</div>
    <div id="powerLevel">Power Level: 1</div>

    <script>
        // Инициализация начальных значений
        let tapCount = 0;
        let powerLevel = 1;

        // Элементы DOM
        const hamster = document.getElementById('hamster');
        const tapCountDisplay = document.getElementById('tapCount');
        const powerLevelDisplay = document.getElementById('powerLevel');

        // Загружаем прогресс
        document.addEventListener('DOMContentLoaded', (event) => {
            const savedTaps = localStorage.getItem('tapCount');
            const savedPower = localStorage.getItem('powerLevel');

            if (savedTaps && savedPower) {
                tapCount = parseInt(savedTaps, 10);
                powerLevel = parseInt(savedPower, 10);
                tapCountDisplay.textContent = `Taps: ${tapCount}`;
                powerLevelDisplay.textContent = `Power Level: ${powerLevel}`;
            }
        });

        // Функция для увеличения силы хомяка при каждом тапе
        function tapHamster() {
            tapCount++;
            localStorage.setItem('tapCount', tapCount);  // Сохраняем количество тапов
            tapCountDisplay.textContent = `Taps: ${tapCount}`;

            // Каждые 10 тапов хомяк получает новый уровень силы
            if (tapCount % 10 === 0) {
                powerLevel++;
                localStorage.setItem('powerLevel', powerLevel);  // Сохраняем уровень силы
                powerLevelDisplay.textContent = `Power Level: ${powerLevel}`;
                hamster.style.backgroundColor = getRandomColor();  // Меняем цвет хомяка
            }
        }

        // Слушаем нажатия на хомяка
        hamster.addEventListener('click', tapHamster);

        // Функция для генерации случайного цвета
        function getRandomColor() {
            const letters = '0123456789ABCDEF';
            let color = '#';
            for (let i = 0; i < 6; i++) {
                color += letters[Math.floor(Math.random() * 16)];
            }
            return color;
        }
    </script>
</body>
</html>
